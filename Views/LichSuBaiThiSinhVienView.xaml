<Window x:Class="SEP490_G18_GESS_DESKTOPAPP.Views.LichSuBaiThiSinhVienView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SEP490_G18_GESS_DESKTOPAPP.Views"
         xmlns:uc="clr-namespace:SEP490_G18_GESS_DESKTOPAPP.Views.UserControls"
         xmlns:helpers="clr-namespace:SEP490_G18_GESS_DESKTOPAPP.Helpers"
        mc:Ignorable="d"
        Title="Lịch sử bài thi" Background="#F7F9FC" WindowState="Maximized"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        Topmost="True" ShowInTaskbar="False" Focusable="True"
        Activated="Window_Activated"
        Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="HeaderBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#3182CE"/>
        <SolidColorBrush x:Key="PrimaryLightColor" Color="#EBF8FF"/>
        
        <!-- Sử dụng hiệu ứng mượt mà để tránh ghost text -->

        <!-- Style cho panels với shadow -->
        <Style x:Key="ShadowPanel" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Margin" Value="24,0,24,0"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ComboBox đã sửa -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <Grid>
                                    <ContentPresenter x:Name="ContentSite"
                                                    Margin="16,0,36,0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                    IsHitTestVisible="False"/>

                                    <ToggleButton x:Name="ToggleButton"
                                                Grid.Column="2"
                                                Focusable="false"
                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                ClickMode="Press"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalAlignment="Right"
                                                Width="36">
                                        <Path x:Name="Arrow"
                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                            Fill="#718096"
                                            Width="8" Height="6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup x:Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                        Background="{StaticResource CardBackground}"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource BorderColor}"
                                        CornerRadius="12"
                                        Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="16" ShadowDepth="0"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="8" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="Arrow" Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ComboBoxItem -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8"
                                Margin="4">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryLightColor}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho môn học items -->
        <Style x:Key="SubjectItemStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#F7FAFC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightColor}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

                 <!-- Converter để xử lý background cho selected subject -->
         <local:SubjectSelectionConverter x:Key="SubjectSelectionConverter"/>
         <!-- Converter hiển thị Trắc nghiệm/Tự luận -->
         <local:ExamTypeToVietnameseConverter x:Key="ExamTypeToVietnameseConverter"/>
         
                 <!-- Converters cho trạng thái chấm -->
        <helpers:GradeStatusBackgroundConverter x:Key="GradeStatusBackgroundConverter"/>
        <helpers:GradeStatusBorderConverter x:Key="GradeStatusBorderConverter"/>
        <helpers:GradeStatusTextConverter x:Key="GradeStatusTextConverter"/>
        <helpers:GradeStatusForegroundConverter x:Key="GradeStatusForegroundConverter"/>
        <helpers:ScoreDisplayConverter x:Key="ScoreDisplayConverter"/>
        
        <!-- Converters cho hiển thị thông báo không có dữ liệu -->
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <helpers:CountToVisibilityInverseConverter x:Key="CountToVisibilityInverseConverter"/>
        
        <!-- Style cho nút Refresh -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                        Background="{TemplateBinding Background}" 
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="Transparent">
                            <Path x:Name="RefreshIcon"
                          Data="M12,4V1L8,5L12,9V6C15.31,6 18,8.69 18,12C18,15.31 15.31,18 12,18C8.69,18 6,15.31 6,12H4C4,16.42 7.58,20 12,20C16.42,20 20,16.42 20,12C20,7.58 16.42,4 12,4Z"
                          Fill="#2D3748"
                          Width="20"
                          Height="20"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="RefreshRotation" Angle="0"/>
                            </Path.RenderTransform>
                        </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#EDF2F7"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter TargetName="RefreshIcon" Property="Fill" Value="#3182CE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="RefreshRotation"
                                                Storyboard.TargetProperty="Angle"
                                                From="0" To="360" Duration="0:0:0.3"
                                                RepeatBehavior="Forever">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="RefreshRotation"
                                                Storyboard.TargetProperty="Angle"
                                                To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút Refresh với trạng thái Loading -->
        <Style x:Key="RefreshButtonLoadingStyle" TargetType="Button" BasedOn="{StaticResource RefreshButtonStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Quay lại"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                Background="{TemplateBinding Background}" 
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="Transparent">
                            <Path x:Name="ArrowIcon"
                  Data="M15,7 L9,1 L7.5,2.5 L11.25,6.25 L1,6.25 L1,7.75 L11.25,7.75 L7.5,11.5 L9,13 Z"
                  Fill="#2D3748"
                  Width="18"
                  Height="18"
                  Stretch="Uniform"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="180"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#EDF2F7"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                <Setter TargetName="ArrowIcon" Property="Fill" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <!-- Sử dụng hiệu ứng chuyển view mượt mà -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="White" Height="40" 
                VerticalAlignment="Top" Panel.ZIndex="1000"
                BorderThickness="0,0,0,1" BorderBrush="#E2E8F0"
                x:Name="CustomTitleBar"
                MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown">
            <!-- Sử dụng hiệu ứng mượt mà -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <TextBlock Grid.Column="0" Text="Lịch sử bài thi" 
                          Foreground="#2D3748" FontSize="14" FontWeight="Medium"
                          VerticalAlignment="Center" Margin="15,0,0,0"
                                                     x:Name="TitleText"/>
                
                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" x:Name="WindowControls">
                    <!-- Minimize Button - Disabled -->
                    <Button Width="40" Height="40" 
                            Background="Transparent" BorderThickness="0"
                            IsEnabled="False" Opacity="0.5"
                            x:Name="MinimizeButton">
                        <Path Data="M0,8 L8,8" Stroke="#718096" StrokeThickness="1.5" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    
                    <!-- Maximize Button - Disabled -->
                    <Button Width="40" Height="40" 
                            Background="Transparent" BorderThickness="0"
                            IsEnabled="False" Opacity="0.5"
                            x:Name="MaximizeButton">
                        <Path Data="M0,0 L8,0 L8,8 L0,8 Z" 
                              Stroke="#718096" StrokeThickness="1.5" Fill="Transparent"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    
                    <!-- Close Button -->
                    <Button Width="40" Height="40" 
                            Background="Transparent" BorderThickness="0"
                            Click="CloseButton_Click" Cursor="Hand"
                            x:Name="CloseButton">
                        <Path Data="M0,0 L8,8 M8,0 L0,8" Stroke="#718096" StrokeThickness="1.5" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Header Section -->
        <Border Grid.Row="1" Background="{StaticResource HeaderBackground}" 
        CornerRadius="16"
        Margin="24,24,24,12"
        BorderThickness="1"
        BorderBrush="{StaticResource BorderColor}"
        x:Name="HeaderSection">
            <!-- Sử dụng hiệu ứng mượt mà -->
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" 
                        ShadowDepth="0" BlurRadius="24"/>
            </Border.Effect>
            <Grid Margin="24,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                Style="{StaticResource BackButtonStyle}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="0,0,20,0"
                Command="{Binding BackCommand}"/>

                <!-- Title -->
                <TextBlock Grid.Column="1" 
                   Text="Lịch sử bài thi" 
                   Foreground="#1A202C" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                                       x:Name="MainTitleText"/>

                <!-- Refresh Button -->
                <Button Grid.Column="2"
                        Style="{StaticResource RefreshButtonLoadingStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="44" Height="44"
                        Margin="0,0,16,0"
                        Command="{Binding RefreshCommand}"
                        ToolTip="Làm mới dữ liệu"/>

                <!-- User Profile Control -->
                <uc:UserProfileControl Grid.Column="3" 
                                     HorizontalAlignment="Right" 
                                     VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="2" Background="#F0FFFFFF" Panel.ZIndex="100">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Đang tải dữ liệu..." 
                           FontSize="18" 
                           Foreground="#4A5568"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="240" Height="6" 
                             Margin="0,16,0,0"
                             Background="{StaticResource BorderColor}"
                             Foreground="{StaticResource PrimaryColor}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="0,12,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Bộ lọc và danh sách môn học -->
            <Border Grid.Column="0" Style="{StaticResource ShadowPanel}">
                <StackPanel>
                    <TextBlock Text="Bộ lọc" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#2D3748"
                               Margin="0,0,0,24"/>

                    <!-- Kỳ học filter -->
                    <TextBlock Text="Kỳ học" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Foreground="#4A5568"
                               Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding SemesterList}" 
                              SelectedItem="{Binding SelectedSemester}" 
                              DisplayMemberPath="SemesterName"
                              Style="{StaticResource ModernComboBox}"/>

                    <!-- Năm học filter -->
                    <TextBlock Text="Năm học" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Foreground="#4A5568"
                               Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding YearList}" 
                              SelectedItem="{Binding SelectedYear}"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,24">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringFormat=Năm {0}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Danh sách môn học -->
                    <TextBlock Text="Danh sách môn học" 
                               FontWeight="SemiBold" 
                               FontSize="16"
                               Foreground="#2D3748"
                               Margin="0,0,0,12"/>
                    
                    <!-- Thông báo không có môn học -->
                    <Border Background="#F7FAFC" 
                            BorderBrush="#E2E8F0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,12"
                            Height="200"
                            Visibility="{Binding SubjectList.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📚" 
                                       FontSize="32" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Không có môn học trong kỳ học này" 
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="#718096" 
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Danh sách môn học -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="350"
                                  Visibility="{Binding SubjectList.Count, Converter={StaticResource CountToVisibilityInverseConverter}}">
                        <ItemsControl ItemsSource="{Binding SubjectList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource SubjectItemStyle}"
                                            MouseLeftButtonUp="SubjectItem_MouseLeftButtonUp">
                                        <Border.Background>
                                            <MultiBinding Converter="{StaticResource SubjectSelectionConverter}">
                                                <Binding Path="DataContext.SelectedSubject" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                <Binding Path="."/>
                                            </MultiBinding>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📘" 
                                                       FontSize="18" 
                                                       Margin="0,0,12,0"/>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Code}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="15"
                                                               x:Name="SubjectCode">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Value="True">
                                                                        <DataTrigger.Binding>
                                                                            <MultiBinding Converter="{StaticResource SubjectSelectionConverter}">
                                                                                <Binding Path="DataContext.SelectedSubject" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                                <Binding Path="."/>
                                                                            </MultiBinding>
                                                                        </DataTrigger.Binding>
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text=" - " FontSize="15" x:Name="Separator">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#4A5568"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Value="True">
                                                                        <DataTrigger.Binding>
                                                                            <MultiBinding Converter="{StaticResource SubjectSelectionConverter}">
                                                                                <Binding Path="DataContext.SelectedSubject" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                                <Binding Path="."/>
                                                                            </MultiBinding>
                                                                        </DataTrigger.Binding>
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14"
                                                           TextWrapping="Wrap"
                                                           x:Name="SubjectName">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#1A202C"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <MultiBinding Converter="{StaticResource SubjectSelectionConverter}">
                                                                            <Binding Path="DataContext.SelectedSubject" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                            <Binding Path="."/>
                                                                        </MultiBinding>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Right Panel - Chi tiết lịch sử bài thi -->
            <Border Grid.Column="1" Style="{StaticResource ShadowPanel}" Margin="16,0,24,0">
                <StackPanel>
                    <!-- Subject Header -->
                    <TextBlock FontSize="22" FontWeight="SemiBold" Foreground="#2D3748" Margin="0,0,0,4">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="SelectedSubject.Code" FallbackValue=""/>
                                <Binding Path="SelectedSubject.Name" FallbackValue="Chọn môn học để xem lịch sử thi"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <TextBlock FontSize="15" Foreground="#718096" Margin="0,0,0,24">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Học kỳ {0}, năm {1}">
                                <Binding Path="SelectedSemester.SemesterName" FallbackValue=""/>
                                <Binding Path="SelectedYear" FallbackValue=""/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <!-- Exam Table -->
                    <Border 
                            Padding="0" 
                            Margin="0,0,0,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Table Headers -->
                            <Border Grid.Row="0" Grid.Column="0" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="1,1,0,1" >
                                <TextBlock Text="Tên bài thi" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,1">
                                <TextBlock Text="Loại bài thi" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,1">
                                <TextBlock Text="Loại đề thi" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="3" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,1">
                                <TextBlock Text="Thời gian" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="4" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,1">
                                <TextBlock Text="Ngày thi" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="5" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,1">
                                <TextBlock Text="Trạng thái chấm" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="6" Background="#F7FAFC" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,1,1" >
                                <TextBlock Text="Điểm số" 
                                           Foreground="#2D3748" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Data Rows -->
                            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="7" VerticalScrollBarVisibility="Auto" Height="300">
                                <StackPanel>
                                    <!-- Thông báo không có lịch sử bài thi -->
                                    <Border Background="#F7FAFC" 
                                            BorderBrush="#E2E8F0" 
                                            BorderThickness="1" 
                                            CornerRadius="8" 
                                            Padding="40" 
                                            Margin="0,20,0,20"
                                            Height="200"
                                            Visibility="{Binding ExamHistoryList.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="📝" 
                                                       FontSize="32" 
                                                       HorizontalAlignment="Center" 
                                                       Margin="0,0,0,8"/>
                                            <TextBlock Text="Không có lịch sử bài thi" 
                                                       FontSize="16" 
                                                       FontWeight="Medium" 
                                                       Foreground="#718096" 
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Danh sách lịch sử bài thi -->
                                    <ItemsControl ItemsSource="{Binding ExamHistoryList}"
                                                  Visibility="{Binding ExamHistoryList.Count, Converter={StaticResource CountToVisibilityInverseConverter}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,12,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="1.2*"/>
                                                        <ColumnDefinition Width="1.2*"/>
                                                        <ColumnDefinition Width="1.2*"/>
                                                        <ColumnDefinition Width="1.5*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="1.2*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Tên bài thi -->
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding ExamName}" 
                                                               VerticalAlignment="Center" 
                                                               HorizontalAlignment="Center" 
                                                               Foreground="#2D3748"
                                                               FontWeight="Medium"
                                                               FontSize="14"/>

                                                    <!-- Loại bài thi với badge -->
                                                    <Border Grid.Column="1" 
                                                            Background="{StaticResource PrimaryLightColor}" 
                                                            CornerRadius="8" 
                                                            Padding="12,6" 
                                                            Margin="8,0" 
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ExamType, Converter={StaticResource ExamTypeToVietnameseConverter}}" 
                                                                   Foreground="{StaticResource PrimaryColor}" 
                                                                   FontWeight="Medium" 
                                                                   FontSize="12" 
                                                                   TextAlignment="Center"/>
                                                    </Border>

                                                    <!-- Loại đề thi -->
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding CategoryExamName}" 
                                                               VerticalAlignment="Center" 
                                                               HorizontalAlignment="Center" 
                                                               Foreground="#4A5568"
                                                               FontSize="14"/>

                                                    <!-- Thời gian thi -->
                                                    <TextBlock Grid.Column="3" 
                                                               VerticalAlignment="Center" 
                                                               HorizontalAlignment="Center" 
                                                               Foreground="#4A5568"
                                                               FontSize="14">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}{0} phút">
                                                                <Binding Path="Duration"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>

                                                    <!-- Ngày thi -->
                                                    <TextBlock Grid.Column="4" 
                                                               Text="{Binding SubmittedDateTime}" 
                                                               VerticalAlignment="Center" 
                                                               HorizontalAlignment="Center" 
                                                               Foreground="#4A5568"
                                                               FontSize="14"
                                                               TextWrapping="Wrap"/>

                                                    <!-- Trạng thái chấm -->
                                                    <Border Grid.Column="5" 
                                                            Background="{Binding IsGrade, Converter={StaticResource GradeStatusBackgroundConverter}}" 
                                                            CornerRadius="8" 
                                                            Padding="12,6" 
                                                            Margin="8,0" 
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            BorderThickness="1"
                                                            BorderBrush="{Binding IsGrade, Converter={StaticResource GradeStatusBorderConverter}}"
                                                            MinWidth="80">
                                                        <TextBlock Text="{Binding IsGrade, Converter={StaticResource GradeStatusTextConverter}}" 
                                                                   Foreground="{Binding IsGrade, Converter={StaticResource GradeStatusForegroundConverter}}" 
                                                                   FontWeight="Medium" 
                                                                   FontSize="12" 
                                                                   HorizontalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Điểm số với badge -->
                                                    <Border Grid.Column="6" 
                                                            Background="#F0FDF4" 
                                                            CornerRadius="8" 
                                                            Padding="12,6" 
                                                            Margin="8,0" 
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            BorderThickness="1"
                                                            BorderBrush="#BBF7D0"
                                                            MinWidth="50">
                                                        <TextBlock Foreground="#16A34A" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="14" 
                                                                   HorizontalAlignment="Center">
                                                            <TextBlock.Text>
                                                                <MultiBinding Converter="{StaticResource ScoreDisplayConverter}">
                                                                    <Binding Path="Score"/>
                                                                    <Binding Path="IsGrade"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>