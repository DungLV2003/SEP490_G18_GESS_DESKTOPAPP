<Window x:Class="SEP490_G18_GESS_DESKTOPAPP.Views.LichSuBaiThiSinhVienView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEP490_G18_GESS_DESKTOPAPP.Views"
        mc:Ignorable="d"
        Title="Lịch sử bài thi" Background="#F5F6FA" WindowState="Maximized">
    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10,8"/>
        </Style>

        <Style x:Key="FilterHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="SubjectItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SelectedSubjectItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ExamHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ExamCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="ScoreStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Style dùng chung cho ComboBox -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                <Grid>
                                    <ContentPresenter Margin="10,0,30,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}" />
                                    <ToggleButton DockPanel.Dock="Right"
                                              IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Focusable="False"
                                              HorizontalAlignment="Right"
                                              Width="30">
                                        <Path VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="#6B7280"
                                          Width="8" Height="6" />
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                                <Border Background="White"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                    SnapsToDevicePixels="True"
                                    Margin="0,2,0,0">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Blue Header -->
        <Border Grid.Row="0" Background="#2196F3">
            <TextBlock Text="Lịch sử bài thi" Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="1" Background="#80FFFFFF">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Đang tải dữ liệu..." 
                           FontSize="18" 
                           Foreground="#6C757D"
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" Height="4" 
                             Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Filters and Subject List -->
            <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel Margin="20">
                    <!-- Filters Header -->
                    <TextBlock Text="Bộ lọc" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Semester Filter -->
                    <TextBlock Text="Kỳ học" Style="{StaticResource FilterHeaderStyle}"/>
                    <ComboBox Height="35" Margin="0,0,0,15"
                              Style="{StaticResource RoundedComboBoxStyle}"
                              ItemsSource="{Binding SemesterList}"
                              SelectedItem="{Binding SelectedSemester}"
                              DisplayMemberPath="SemesterName">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Year Filter -->
                    <TextBlock Text="Năm học" Style="{StaticResource FilterHeaderStyle}"/>
                    <ComboBox Height="35" Margin="0,0,0,20"
                              Style="{StaticResource RoundedComboBoxStyle}"
                              ItemsSource="{Binding YearList}"
                              SelectedItem="{Binding SelectedYear}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}Năm {0}">
                                            <Binding/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Subject List -->
                    <TextBlock Text="Danh sách môn học" Style="{StaticResource FilterHeaderStyle}"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <ItemsControl ItemsSource="{Binding SubjectList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,2" Padding="15,10" CornerRadius="5" Cursor="Hand"
                                            MouseLeftButtonUp="SubjectItem_MouseLeftButtonUp">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#BBDEFB"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.SelectedSubject.Id}" 
                                                               Value="{Binding Id}">
                                                        <Setter Property="Background" Value="#2196F3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📘" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock FontWeight="SemiBold" VerticalAlignment="Center" TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1}">
                                                        <Binding Path="Code"/>
                                                        <Binding Path="Name"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.SelectedSubject.Id}" 
                                                                       Value="{Binding Id}">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- No subjects message -->
                    <TextBlock Text="Không có môn học nào" 
                               FontSize="14" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,20">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SubjectList.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Right Panel - Exam Details -->
            <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <!-- Subject Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock FontSize="20" FontWeight="Bold" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} - {1}">
                                    <Binding Path="SelectedSubject.Code" FallbackValue=""/>
                                    <Binding Path="SelectedSubject.Name" FallbackValue="Chọn môn học để xem lịch sử thi"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock FontSize="14" Foreground="Gray" Margin="0,0,0,20">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}, {1}">
                                <Binding Path="SelectedSemester.SemesterName" FallbackValue=""/>
                                <Binding Path="SelectedYear" FallbackValue="">
                                    <Binding.StringFormat>Năm {0}</Binding.StringFormat>
                                </Binding>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSubject}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- No selection message -->
                    <TextBlock Text="Vui lòng chọn một môn học để xem lịch sử bài thi"
                               FontSize="16"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,100">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSubject}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Exam Table -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSubject}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="15*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Header Row -->
                            <Border Grid.Row="0" Grid.Column="0" Background="#2196F3" CornerRadius="5,0,0,0">
                                <TextBlock Text="TÊN BÀI THI" Style="{StaticResource ExamHeaderStyle}"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Background="#2196F3">
                                <TextBlock Text="LOẠI BÀI THI" Style="{StaticResource ExamHeaderStyle}"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Background="#2196F3">
                                <TextBlock Text="LOẠI ĐỀ THI" Style="{StaticResource ExamHeaderStyle}"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="3" Background="#2196F3">
                                <TextBlock Text="THỜI GIAN THI" Style="{StaticResource ExamHeaderStyle}"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="4" Background="#2196F3">
                                <TextBlock Text="NGÀY THI" Style="{StaticResource ExamHeaderStyle}"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="5" Background="#2196F3" CornerRadius="0,5,0,0">
                                <TextBlock Text="ĐIỂM SỐ" Style="{StaticResource ExamHeaderStyle}"/>
                            </Border>

                            <!-- Data Rows -->
                            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="6" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ExamHistoryList}" AlternationCount="2">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="25*"/>
                                                    <ColumnDefinition Width="15*"/>
                                                    <ColumnDefinition Width="15*"/>
                                                    <ColumnDefinition Width="15*"/>
                                                    <ColumnDefinition Width="15*"/>
                                                    <ColumnDefinition Width="15*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1" Height="45">
                                                    <TextBlock Text="{Binding ExamName}" Style="{StaticResource ExamCellStyle}"/>
                                                </Border>
                                                <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1" Height="45">
                                                    <TextBlock Text="{Binding ExamType}" Style="{StaticResource ExamCellStyle}" Foreground="#2196F3"/>
                                                </Border>
                                                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1" Height="45">
                                                    <TextBlock Text="{Binding CategoryExamName}" Style="{StaticResource ExamCellStyle}" Foreground="#9C27B0"/>
                                                </Border>
                                                <Border Grid.Column="3" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1" Height="45">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Duration}" Style="{StaticResource ExamCellStyle}"/>
                                                        <TextBlock Text=" phút" Style="{StaticResource ExamCellStyle}"/>
                                                    </StackPanel>
                                                </Border>
                                                <Border Grid.Column="4" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1" Height="45">
                                                    <TextBlock Text="{Binding SubmittedDateTime, StringFormat=dd/MM/yyyy}" Style="{StaticResource ExamCellStyle}"/>
                                                </Border>
                                                <Border Grid.Column="5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Height="45">
                                                    <TextBlock Text="{Binding Score}" Style="{StaticResource ScoreStyle}" Foreground="#4CAF50"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- No exams message -->
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="6"
                                       Text="Không có lịch sử thi nào cho môn học này"
                                       FontSize="14"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ExamHistoryList.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>